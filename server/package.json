{
  "name": "arc-donation-widget-server",
  "version": "1.0.0",
  "description": "Server implementation based on Koa for donation service",
  "scripts": {
    "build": "tsc",
    "build:clean": "tsc --clean",
    "watch:ts": "tsc --watch",
    "watch:node": "nodemon dist/index.js",
    "watch:debug": "nodemon --inspect dist/index.js",
    "serve": "yarn build && concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,green.bold\" \"yarn watch:ts\" \"yarn watch:node\"",
    "debug": "yarn build && concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,green.bold\" \"yarn watch:ts\" \"yarn watch:debug\"",
    "clean": "git clean -dfqX -- ./node_modules ./dist",
    "docker:sh": "docker-compose exec server /bin/sh",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "test": "jest"
  },
  "author": "arcbjorn",
  "license": "MIT",
  "dependencies": {
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.2.1",
    "koa-router": "^10.0.0",
    "mongoose": "^5.12.6"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/koa": "^2.13.1",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-json": "^2.0.18",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.4.2",
    "@types/node": "^15.0.1",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "concurrently": "^6.0.2",
    "eslint": "^7.25.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
